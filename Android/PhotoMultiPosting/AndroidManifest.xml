<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.skp.opx.mul"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomTheme" >
        <activity
            android:name=".ui.HomeActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:windowSoftInputMode="adjustPan"
            android:name=".ui.PostingActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ui.MypostingListActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ui.MypostingDetailActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ui.MypostingCommentListActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ui.SNSAccountSetActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ui.AccountSettingActivity"
            android:screenOrientation="portrait" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />

</manifest>