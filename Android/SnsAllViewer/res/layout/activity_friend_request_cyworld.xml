<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/header_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
                android:id="@+id/title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/friends_request"
                android:textSize="@dimen/header_text_size"
                android:textColor="@color/white"
                android:background="@color/gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/send_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/send" />

        <Button
            android:id="@+id/cancel_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel" />
    </LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_above="@id/bottom_ly"
        android:layout_below="@id/header_ly"
        android:orientation="vertical"
        android:padding="5dp">
	    <TextView 
	        android:id="@+id/request_to_tv"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/request_cyworld_friend_1" />
	    <TextView
	        android:id="@+id/request_friend1_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/request_cyworld_friend_2" />
	    <EditText
	        android:id="@+id/request_friend1_et"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:inputType="text"
	        android:text="@string/hint_cyworld_friend" />
	    <TextView
	        android:id="@+id/request_friend2_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/request_cyworld_friend_2" />
	    <EditText
	        android:id="@+id/request_friend2_et"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:inputType="text"
	        android:text="@string/hint_cyworld_friend" />
	    <EditText
	        android:id="@+id/request_friend_msg_et"
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="1"
	        android:gravity="top|left"
	        android:inputType="text"
	        android:text="@string/hint_lets_cyworld_friend" />
	</LinearLayout>
</RelativeLayout>